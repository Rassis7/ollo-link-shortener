{
  "name": "ollo-link-api",
  "version": "1.1.5",
  "description": "OLLO.li api",
  "main": "index.js",
  "engines": {
    "node": ">=18.12.0 <=20.11.1"
  },
  "author": "Romulo Assis",
  "license": "ISC",
  "scripts": {
    "build": "tsc -p tsconfig.json && tsc-alias",
    "dev": "nodemon",
    "start": "NODE_ENV=production node ./dist/src/server.js",
    "docker": "docker-compose up -d && npm run prisma generate",
    "test": "NODE_ENV=test jest --coverage",
    "test:ci": "NODE_ENV=test jest --ci --collect-coverage --coverage",
    "test:watch": "NODE_ENV=test jest --watchAll",
    "nvm": "nvm use",
    "prisma": "dotenv -e .env.development prisma",
    "prisma:newMigration": "npm run prisma migrate dev --name",
    "new:module": "chmod +x ./scripts/create_module.sh && ./scripts/create_module.sh",
    "commit": "git cz",
    "lint": "npx eslint --fix --ext .ts,.ts ./src",
    "postinstall": "npm run prisma generate",
    "seed": "NODE_ENV=development node ./scripts/seed.js",
    "release": "npx release-it",
    "release:ci": "npx release-it --only-version"
  },
  "config": {
    "commitizen": {
      "path": "git-cz"
    }
  },
  "prisma": {
    "schema": "./prisma/schema.prisma"
  },
  "devDependencies": {
    "@faker-js/faker": "^8.3.1",
    "@release-it/conventional-changelog": "^8.0.1",
    "@types/bcrypt": "^5.0.2",
    "@types/jest": "^29.5.11",
    "@types/node": "^20.9.0",
    "@typescript-eslint/eslint-plugin": "^6.20.0",
    "@typescript-eslint/parser": "^6.13.1",
    "dotenv": "^16.3.1",
    "dotenv-cli": "^7.3.0",
    "eslint": "^8.54.0",
    "eslint-config-standard-with-typescript": "^40.0.0",
    "eslint-plugin-import": "^2.29.0",
    "eslint-plugin-n": "^16.3.1",
    "eslint-plugin-promise": "^6.1.1",
    "fast-jwt": "^4.0.0",
    "git-cz": "^4.9.0",
    "ioredis-mock": "^8.9.0",
    "jest": "^29.7.0",
    "jest-mock-extended": "^3.0.5",
    "mock-require": "^3.0.3",
    "nodemon": "^3.1.0",
    "pino": "^8.16.2",
    "pino-pretty": "^10.2.3",
    "prisma": "^5.9.1",
    "release-it": "^17.1.1",
    "ts-jest": "^29.1.2",
    "ts-node": "^10.9.2",
    "tsc-alias": "^1.8.8",
    "typescript": "^5.3.2"
  },
  "dependencies": {
    "@fastify/cookie": "^9.3.1",
    "@fastify/jwt": "^7.2.3",
    "@fastify/rate-limit": "^9.0.0",
    "@fastify/redis": "^6.1.1",
    "@fastify/swagger": "^8.12.0",
    "@fastify/swagger-ui": "^1.10.1",
    "@prisma/client": "^5.5.2",
    "bcrypt": "^5.1.1",
    "date-fns": "^2.30.0",
    "fastify": "^4.24.3",
    "fastify-type-provider-zod": "^1.1.9",
    "ioredis": "^5.3.2",
    "mailersend": "^2.2.0",
    "zod": "^3.22.4",
    "zod-to-json-schema": "^3.21.4"
  }
}
